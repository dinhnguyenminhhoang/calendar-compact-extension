{
  "manifest_version": 3,
  "name": "UTC2 Lịch Học & Làm Việc",
  "version": "3.0.2",
  // "key": "",
  "description": "Lịch học và làm việc thông minh dành cho sinh viên UTC2 – hỗ trợ quản lý thời gian, lịch học, lịch thi và tích hợp Google Classroom.",
  "icons": {
    "16": "icons/logoUtc2.png",
    "48": "icons/logoUtc2.png",
    "128": "icons/logoUtc2.png"
  },
  "action": {
    "default_popup": "calendar.html",
    "default_icon": {
      "16": "icons/logoUtc2.png",
      "48": "icons/logoUtc2.png",
      "128": "icons/logoUtc2.png"
    }
  },
  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "identity"
  ],
  "oauth2": {
    // "client_id": "314265307613-a26ccvhpqthu84qhkcfgo9d2hc7ojubi.apps.googleusercontent.com",
    "client_id": "314265307613-ct2163j3jdqabadct9gmsbkh3mghkok9.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/classroom.courses.readonly",
      "https://www.googleapis.com/auth/classroom.coursework.me.readonly",
      "https://www.googleapis.com/auth/calendar.readonly"
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://www.googleapis.com/*",
    "https://classroom.googleapis.com/*"
  ]
}