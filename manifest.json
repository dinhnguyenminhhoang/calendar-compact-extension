{
  "manifest_version": 3,
  "name": "Lịch Học & Làm Việc Pro",
  "version": "2.3.2",
  "description": "Quản lý lịch chuyên nghiệp với giao diện tuần compact",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "calendar.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "notifications",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
